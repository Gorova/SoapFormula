@model SoapFormula.Common.Entities.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<table>
    <tr>
        <th>
            edit category @Model.Name
        </th>
    <tr>
        <th>
            @using (Html.BeginForm("Editing", "Category", FormMethod.Post))
            {
                @Html.Hidden("Id","Id")
                @Html.TextBox("Name", Model.Name)
                <input type="submit" value="save"/>
            }
        </th>
    </tr>
    <tr>
        <th>
            @Html.ActionLink("back to main page", "Index")
        </th>
    </tr>
</table>
