@model SoapFormula.Web.ViewModel.CategoryViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Category</h2>
<table>
    <tr>
        <th>
            edit category @Model.Name
        </th>
    </tr>
    <tr>
        <th>
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(i=>i.Id)
                <p> edit name</p>
                @Html.TextBoxFor(i=>i.Name)
                <p> choose products for edition</p>
                @Html.ListBoxFor(i => i.SelectedIds, Model.ProductItems, "choosen")
                <input type="submit" value="save"/>
            }
        </th>
    </tr>
    <tr>
        <th>
            @Html.ActionLink("back to main page", "Index")
        </th>
    </tr>
</table>
