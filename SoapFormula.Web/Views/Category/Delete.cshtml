@model SoapFormula.Web.ViewModel.CategoryViewModel
@{
    ViewBag.Title = "Delete category";
}

<h2>@ViewBag.Title</h2>

<h3>Are you sure you want to delete category</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(i => i.Name)
        </dt>

        <dd>
            @Html.DisplayFor(i => i.Name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(i => i.Id)
        <div class="form-actions no-color">
            <input type="submit" value="delete" class="btn btn-default" />
            <input type="button" value="cancel" class="btn btn-default" onclick="location.href = '@Url.Action("Index", "Category")'" />
        </div>
    }
</div>



        
            
      
