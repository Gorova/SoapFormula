@using System.Web.UI.WebControls
@model SoapFormula.Web.ViewModel.ProductViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table>
    <tr>
        <td>
            @Html.LabelFor(i => i.Name)<br/>
            @Html.DisplayFor(i => i.Name)<br/>

            @Html.LabelFor(i => i.Price)<br/>
            @Html.DisplayFor(i => i.Price)<br/>

            @Html.LabelFor(i => i.Weight)<br/>
            @Html.DisplayFor(i => i.Weight)<br/>

            @Html.LabelFor(i => i.Manufacturer)<br/>
            @Html.DisplayFor(i => i.Manufacturer.Name)<br/>
            @Html.LabelFor(i => i.Categories)
            <ul>
                @foreach (var category in Model.Categories)
                {
                    <li>@category.Name</li>
                }
            </ul>
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("back to main page", "Index")
        </td>
    </tr>

</table>