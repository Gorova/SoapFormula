@using System.Web.UI.WebControls
@model SoapFormula.Web.ViewModel.ProductViewModel
@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table>
    <tr>
        <th>
            you chosen product: @Model.Name
        </th>
    </tr>
    <tr>
        <td>
            price: @Model.Price UAH
        </td>
    </tr>
    <tr>
        <td>
            Weight: @Model.Weight g.
        </td>
    </tr>
    <tr>
        <td>
            Manufacture:@Model.Manufacturer.Name
        </td>
    </tr>
    <tr>
        <td>
            <ul>
            Categories: @foreach (var category in Model.Categories)
                        {
                        <li>@category.Name</li>
                        }
                </ul>
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("back to main page", "Index")
        </td>
    </tr>

</table>