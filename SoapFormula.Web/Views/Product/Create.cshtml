@model SoapFormula.Common.Entities.Product
@{
    ViewBag.Title = "Create";
}

<h2>Create Product</h2>

<table>
    <tr>
        <th>
            write a product
        </th>
        <th></th>
    </tr>
    <tr>
        <td>
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(i => i.Id)
                <p> write name of product</p>
                @Html.TextBoxFor(i => i.Name)
                <p> write price </p>
                @Html.TextBoxFor(i => i.Price)
                <p> write weight</p>
                @Html.TextBoxFor(i => i.Weight)<br/>
                <p>write manufacture</p>
                @Html.HiddenFor(i=>i.ManufacturerId)
                @Html.TextBoxFor(i => i.Manufacturer.Name)<br/>
                <input type="submit" name="create"/>
            }
        </td>
    </tr>
    <tr>
        <td>
            @Html.ActionLink("back to main page", "Index")
        </td>
    </tr>
</table>
